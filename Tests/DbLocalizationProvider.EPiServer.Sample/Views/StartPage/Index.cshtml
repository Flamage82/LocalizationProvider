@using System.Globalization
@using DbLocalizationProvider
@using DbLocalizationProvider.EPiServer.Sample.Infrastructure
@using DbLocalizationProvider.EPiServer.Sample.Resources
@using EPiServer.Framework.Localization
@model DbLocalizationProvider.EPiServer.Sample.Models.ViewModels.StartPageViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <script src="/jsl10n/DbLocalizationProvider.EPiServer.Sample.Models?alias=jsl10n"></script>
    <script src="/jsl10n/DbLocalizationProvider.EPiServer.Sample.ClientSideResources?alias=jsl10n2"></script>
</head>
<body>
    <div>CurrentUICulture: @CultureInfo.CurrentUICulture.Name</div>
    <div>MessageWithFormatArguments: @LocalizationService.Current.GetString(() => Class1.MessageWithFormatArguments, "$$$")</div>
    <div>
        Android (lambda): @Html.Translate(() => ResolutionResources.AndroidVertical)
    </div>
    <div>
        Android (stringly): @Html.Translate("/resolutions/androidvertical")
    </div>
    <form>
        <div>
            @Html.LabelFor(m => m.Username)
            @Html.EditorFor(m => m.Username)
        </div>
    </form>

    <div>
        <span>This is coming from JS (Class1.TermsAndConditions):</span><span id="theJsPlaceholder"></span>
    </div>
    <div>
        <span>This is coming from JS (Class2.SomeValue):</span><span id="theJsPlaceholder2"></span>
    </div>

    <script type="text/javascript">
        document.getElementById('theJsPlaceholder').innerHTML = window.jsl10n.DbLocalizationProvider.EPiServer.Sample
            .Resources.Class1.TermsAndConditions;

        document.getElementById('theJsPlaceholder2').innerHTML = window.jsl10n2.DbLocalizationProvider.EPiServer.Sample
            .ClientSideResources.Class2.SomeValue;
    </script>
</body>
</html>